<div class="padd">
  
<p id="notice"><%= notice %></p>

<h2>Listing Destinos</h2>
<small>Cadastro de emails para recebimento de alertas</small>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destinos.each do |destino| %>
      <tr>
        <td><%= destino.nome %></td>
        <td><%= destino.email %></td>
        <td><%= destino.celular %></td>
        <td><%= link_to 'Show', destino, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_destino_path(destino), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', destino, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

<div class="widget-foot">

  <%= button_to 'Novo Destinatario', new_destino_path, method: :get,class: "btn btn-success" %>

</div>
